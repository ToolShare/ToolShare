extends layout

block content
  .container-fluid
    header
      h1 User Dashboard
      include ./includes/dashboard/dashboardnav.jade
    .row
      .col-md-4
        h3 My Tools
          ul.list-group
            each tool in tools
              li.list-group-item #{tool.name}
          p 
            a.pull-right(href="/tools/new") Add a tool
      .col-md-4
        h3 Tools I want to borrow
          ul.list-group
            each req in borrowReqs
              li.list-group-item #{req.lenderId}
      .col-md-4
        h3 Tools that somebody wants to borrow
          ul.list-group
            each req in lendReqs
              li.list-group-item #{req.requesterId}
